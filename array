#include <stdio.h>

int main()
{
    int a[10],n,i;
    printf("enter the size:");
    scanf("%d",&n);
    printf("enter the array elements:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("\n");
    for(i=n-1;i>=0;i--)
    /**n-1 will make loop start from the last**/
    {
        printf("%d ",a[i]);
    }
    return 0;
}
