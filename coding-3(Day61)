#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{

 char ch,s[100],sen[150];
 scanf("%c*c",&ch);
 printf("%c",ch);
 scanf("%s*c",s);
 printf("\n%s",s);
 scanf(" %[^\n]%*c",sen);
 printf("\n%s",sen);
    return 0;
}
