#finding largest number in an array:
#include<stdio.h>
int main()
{
	int a[10],i,n;
	printf("enter the size of the array:");
	scanf("%d",&n);
	for(i=0;i<n;++i)
	{
	
	printf("enter the array elements-%d:",i+1);
	
	scanf("%d",&a[i]);
}
    
	for(i=1;i<n;i++)
	{
	if(a[0] < a[i])
	a[0] = a[i];
	}
	printf("the largest numer is :%d",a[0]);
	return 0;
	
  }
  
#finding smallest number in an array  
#include<stdio.h>
int main()
{
	int a[10],i,n;
	printf("enter the size of the array:");
	scanf("%d",&n);
	for(i=0;i<n;++i)
	{
	
	printf("enter the array elements-%d:",i+1);
	
	scanf("%d",&a[i]);
}
    
	for(i=1;i<n;i++)
	{
	if(a[0] > a[i])
	a[0] = a[i];
	}
	printf("the smallest numer is :%d",a[0]);
	return 0;
	
  } 
