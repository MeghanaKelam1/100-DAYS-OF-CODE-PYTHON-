#Largest number among three numbers:

#include <stdio.h>

int main()
{
    int a,b,c;
    printf("enter the values:");
    scanf("%d %d %d",&a,&b,&c);
    if(a>b && a>c)
    printf("a is bigegr");
    else if(b>a && b>c)
    printf("b is bigger");
    else
    printf("c is bigger");
return 0;
}

# finding leap year:


#include <stdio.h>

int main()
{
    int a;
    printf("enter the values:");
    scanf("%d",&a);
    if(a%400 == 0)
    printf("%d is leap year",a);
    else if(a%100 == 0)
    printf("%d is not a leap year",a);
    else if(a%4 == 0)
    printf("%d is a leap year",a);
    else
    printf("%d is not a leap year",a);
return 0;
}

#checking whether a number is positive or negitive

#include <stdio.h>

int main()
{
    int a;
    printf("enter the values:");
    scanf("%d",&a);
    if(a < 0)
    printf("it is a negative");
    else if(a>=0)
    printf("the number is positive");
    else
    printf("invalid number");
return 0;
}
