#include <stdio.h>

int main()
{
    int i,j=0,k=0,a[10],b[10],c[10],n;
    printf("enter the size of the array:");
    scanf("%d",&n);
    printf("enter the array:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        if(a[i]%2 == 0)
        {
            b[j]=a[i];
            j++;
        }
        else
        {
            c[k]=a[i];
            k++;
        }
        
    }
    printf("the even numbers are:\n");
    for(i=0;i<j;i++)
{
    printf("%d",b[i]);
}
    
    printf("the odd numbers are:\n");
    for(i=0;i<k;i++)
    {
        printf("%d",c[i]);
    }
printf("\n \n");
    return 0;
}
